{
  "$schema": "https://opencode.ai/config.json",
  "formatter": {
    "terraform": {
      "command": ["terraform", "fmt"],
      "extensions": [".tf", ".hcl", ".tfvars"]
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "terraform *": "deny",
      "pwd": "allow",
      "ls *": "allow"
    },
    "doom_loop": "ask",
    "edit": "allow",
    "external_directory": "ask",
    "question": "allow",
    "skill": "ask",
    "todoread": "allow",
    "webfetch": "ask"
  }
}
