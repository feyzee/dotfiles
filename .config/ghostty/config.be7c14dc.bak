# general
window-save-state = always
shell-integration = fish
desktop-notifications = true

# ui
theme = dark:TokyoNight Moon,light:TokyoNight Day
window-decoration = false
window-decoration = auto
window-theme = auto
cursor-invert-fg-bg = true
mouse-hide-while-typing = true

# GTK specific
gtk-tabs-location = bottom
gtk-titlebar = false
gtk-wide-tabs = false

# macOS specific
macos-titlebar-style = native
macos-secure-input-indication = true

# clipboard
clipboard-read = allow
clipboard-write = allow
copy-on-select = true

# fonts
font-size = 14
font-family = VictorMono Nerd Font
font-style = Medium
font-style-bold = Bold
font-style-italic = Medium Italic
font-style-bold-italic = Bold Italic

# keybindings
keybind = ctrl+shift+|=new_split:right
keybind = ctrl+shift+left_bracket=goto_split:previous
keybind = ctrl+shift+right_bracket=goto_split:next
keybind = ctrl+shift+r=prompt_surface_title
