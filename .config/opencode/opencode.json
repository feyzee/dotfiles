{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "formatter": {
    "terraform": {
      "command": ["terraform", "fmt"],
      "extensions": [".tf", ".hcl", ".tfvars"]
    }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "ask",
      "terraform *": "deny",
      "pwd": "allow",
      "ls *": "allow"
    },
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask"
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
